<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main"
    android:padding="16dp">

    <!-- Button to navigate to Students List Activity -->
    <Button
        android:id="@+id/btnNavigateToStudentsList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go to Students List" />

    <!-- Button to navigate to Another Activity -->


    <Button
        android:id="@+id/btnNavigateToNewStudent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Student" />


</LinearLayout>
